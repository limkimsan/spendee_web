<% if api_key.deleted? %>
  <%= link_to restore_api_key_path(api_key), method: :put, class: "btn btn-success" do %>
    <%= icon('fa-solid', 'rotate-right', style: 'color: white') %>
  <% end %>

  <%= link_to api_key_path(api_key), method: :delete, data: { confirm: "Do you want to delete this API key?" }, class: "btn btn-danger" do %>
    <%= icon('fa-solid', 'trash')%>
  <% end %>
<% else %>
  <%= link_to edit_api_key_path(api_key), class: "btn btn-primary" do %>
    <%= icon('fa-solid', 'pen-to-square')%>
  <% end %>
  <%= link_to api_key_path(api_key, api_key: {actived: !api_key.actived}), method: :put, class: "btn btn-info" do %>
    <%= icon("fa-solid", api_key.actived? ? "eye" : "eye-slash") %>
  <% end %>
  <%= link_to archive_api_key_path(api_key), method: :put, data: { confirm: "Do you want to archive this API key?" }, class: "btn btn-warning" do %>
    <%= icon('fa-solid', 'box-archive', style: 'color: white') %>
  <% end %>
<% end %>