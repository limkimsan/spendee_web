<div class="d-flex mb-4">
  <div class="flex-grow-1">
    <h3>Transactions</h3>
  </div>
  <div>
    <%= link_to "Add new transaction", new_transaction_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="row">
  <% @transactions.each do |transaction| %>
    <div class="col-3 s3 m3 mt-3">
      <div class="card">
        <div class="card-body">
          <div class="d-flex flex-flow justify-content-between mb-3">
            <h5 class="card-title">
              <b>
                <%= transaction.currency_type == "khr" ? "Riel" : "USD" %> <%= number_to_currency(transaction.amount, unit: '') %>
              </b>
            </h5>
            <div><span class="badge text-bg-<%= transaction.transaction_type == "income" ? "success" : "danger" %>"><%= transaction.transaction_type %></span></div>
          </div>
          <h6 class="card-subtitle mb-2 text-muted"><%= transaction.category.name %></h6>
          <div style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis">Note: <%= transaction.note %></div>

          <div class="mt-2">
            <%= link_to "Edit", edit_transaction_path(transaction), class: "btn btn-primary" %>
            <%= link_to "View", transaction_path(transaction), class: "btn btn-success" %>
            <%= link_to "Delete", transaction_path(transaction), method: :delete, data: { confirm: "Do you want to delete this transaction?" }, class: "btn btn-danger" %>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>